<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/content_scrolling">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rating"
                android:isIndicator="true"
                android:secondaryProgressTint="#FFC107"
                android:progressTint="#ffc107"
                android:rating="4"
                android:scaleX="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:text="0.0"
                android:textSize="50dp"
                android:layout_alignBottom="@id/rating_bar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_count"
                android:layout_toRightOf="@id/rating_bar"
                android:layout_alignBaseline="@id/rating_bar"
                android:padding="5dp"
                android:textSize="20dp"
                android:text="(0)"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mess_desc"
                android:layout_below="@id/rating"
                android:textSize="18sp"
                android:text="Description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mess_price"
                android:layout_below="@id/mess_desc"
                android:textSize="30sp"
                android:text= "Price \u20B9"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mess_price_tv"
                android:layout_below="@id/mess_desc"
                android:textSize="30sp"
                android:text= "2000"
                android:textStyle="bold"
                android:textColor="@color/pcolor"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tv_mess_price"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/direction"
                android:layout_below="@id/mess_desc"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_directions_walk_24"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/limit"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Unlimited"
                android:layout_below="@id/tv_mess_price"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/scolorlight"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:id="@+id/btn_ly"
                android:orientation="horizontal"
                android:layout_below="@id/limit"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dine"
                    android:layout_weight="1"
                    android:text="Dine"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/packing"
                    android:text="Packing"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_delivery"
                    android:layout_weight="1"
                    android:text="Delivery"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/menu_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_ly"
                android:text="Menu Timetable"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="35sp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tb_layout"
                android:layout_below="@id/menu_timetable"
                android:collapseColumns="1,2,3"
                android:background="@color/pcolorlight"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TableRow android:layout_marginBottom="15dp" android:paddingBottom="5dp" android:background="@color/pcolor">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:textColor="@color/white"

                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunch"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinner"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paratha with sabji and Poha"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item with chai"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:singleLine="true"


                        />

                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 1"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 2"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item 3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        />

                </TableRow>



            </TableLayout>

            <Button
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tb_layout"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginLeft="126dp"
                android:text="Show Menu"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:onClick="menu_detail"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textSize="20sp"
                android:layout_below="@id/menu_btn"
                android:text="Give your Rating"
                android:fontFamily="sans-serif-medium"
                android:layout_centerHorizontal="true"/>
            <RatingBar
                android:id="@+id/rating_bar_user_rating"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:numStars="5"
                android:stepSize="0.1"
                android:progressTint="@color/amber"
                android:secondaryProgressTint="@color/amber"
                android:layout_below="@id/tv6"
                android:layout_marginBottom="70dp"

                />


        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>